
@{
    ViewData["Title"] = "ChatApp";
}

<div class="row">
    <div class="col-md-2">User</div>
    <div class="col-md-4">
        <input type="text" id="userInput" />    
    </div>
</div>
<div class="row">
    <div class="col-md-2">Message</div>
    <div class="col-md-6">
        <input type="text" id="messageInput" />
    </div>
</div>
<div class="row">
    <div class="col-md-6">
        <input type="submit" id="sendButton" value="send a message" />
    </div>
</div>


<div class="row">
    <div class="col-md-6">
        <ul id="messagesList">
        </ul>
    </div>
</div>

@section Scripts
{
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>


}

